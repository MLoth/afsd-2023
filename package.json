{
  "name": "afsd-2023",
  "version": "0.0.0",
  "scripts": {
    "dev": "npx lerna run --scope={pwa,api} dev --stream",
    "dev:api": "npx lerna run --scope=api dev",
    "dev:pwa": "npx lerna run --scope=pwa dev",
    "translate:pwa": "npx run generate:translations -w pwa",
    "build:pwa": "npx lerna run --scope=pwa build",
    "build:api": "npx lerna run --scope=api build",
    "dev:emulate": "npx lerna run --scope={pwa,api} dev:emulate --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MLoth/afsd-2023.git"
  },
  "author": "MCT",
  "bugs": {
    "url": "https://github.com/MLoth/afsd-2023/issues"
  },
  "homepage": "https://github.com/MLoth/afsd-2023#readme",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^7.4.2"
  }
}
